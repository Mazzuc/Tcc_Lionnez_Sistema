@model Zoologico.Models.Usuario

<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-4 align-items-end">
        <img src="~/Image/login.svg" width="80%"/>
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <div class="text-center">

                <h1 id="testando-h3">Bem-Vindo!</h1> 
                <p class="lh-sm">Faça login para continuar</p>
                </div>
        <form>
          <!-- Email input -->
          <div class="form-outline mb-4">
                        <input asp-for="Login" id="form1Example13" class="form-control form-control-lg" placeholder="Usuário" />
          </div>
                    <span asp-validation-for="Login" class="text-danger"></span>

          <!-- Password input -->
          <div class="form-outline mb-4">
                        <input asp-for="Senha" type="password" id="form1Example23" class="form-control form-control-lg" placeholder="Senha"/>
          </div>
          <div class="d-flex justify-content-around align-items-center mb-4">
                        <span asp-validation-for="Senha" class="text-danger"></span>

            <!-- Checkbox -->
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
              <label class="form-check-label" for="form1Example3"> Lembre de mim </label>
            </div>
          </div>

          <!-- Submit button -->
                    <div class="d-flex justify-content-around align-items-center mb-4">

                    <button type="submit" asp-area="Gerenciamento" asp-controller="Inicio" asp-action="Home" class="btn btn-success btn-lg btn-block">Login</button>
                    </div>
                </form>
                <div class="d-flex justify-content-around align-items-center mb-4">

        <img src="~/Image/Ou.png" />
                </div>
                <div class="d-flex justify-content-around align-items-center mb-4">

                <button type="button" class="btn btn-outline-success btn-lg btn-block">Entrar com o Google</button>

                </div>
      </div>
    </div>
  </div>
</section>


@{
    ViewData["Title"] = "Menu";
}



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

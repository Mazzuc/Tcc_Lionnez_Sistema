@model IEnumerable<Zoologico.Areas.Gerenciamento.Models.Animal>

@Html.Partial("_MenuHabitat")

@{
    ViewData["Title"] = "Habitat";
}
<div class="row row-cols-1 row-cols-md-3 g-3">
    @foreach (var item in Model)
    {
        <div class="col-sm-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-success">@Html.DisplayFor(modelItem => item.NomeAnimal)</h2>
                    <p class="card-text"><b>Identificação: </b>@Html.DisplayFor(modelItem => item.IdAnimal)</p>
                    <p class="card-text"><b>@Html.DisplayNameFor(model => model.NomeEspecie):</b> @Html.DisplayFor(modelItem => item.NomeEspecie)</p>
                    <p class="card-text"><b>@Html.DisplayNameFor(model => model.NomeDieta): </b>@Html.DisplayFor(modelItem => item.NomeDieta)</p>
                    <p class="card-text"><b>@Html.DisplayNameFor(model => model.NomePorte): </b>@Html.DisplayFor(modelItem => item.NomePorte)</p>
                    <p class="card-text"><b>@Html.DisplayNameFor(model => model.Sexo): </b>@Html.DisplayFor(modelItem => item.Sexo)</p>
                    <p class="card-text"><b>@Html.DisplayNameFor(model => model.DataNasc): </b>@Html.DisplayFor(modelItem => item.DataNasc)</p>
                </div>
            </div>
        </div>
    }
</div>


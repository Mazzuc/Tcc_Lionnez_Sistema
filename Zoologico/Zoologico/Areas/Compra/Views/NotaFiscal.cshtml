                </center>
                <div class="vlr-mi">
                    <b>@ViewBag.QtdInteira Inteira </b>  @ViewBag.FormatInteira
                </div>
                <br />

                <div class="vlr-mi">
                    <b>@ViewBag.QtdMeia Meia </b>  @ViewBag.FormatMeia
                </div>
                <br />

                <div class="vlr-mi">
                    <b>Total: </b> @ViewBag.FormatTotal
                </div>
                <hr />
                <center>
                    <label class="n-ped">no. Ped. 123456789</label>

                    <div class="data">@ViewBag.Data</div>


                    <img class="img-codigo" src="~/Imagens/codigo-barras.png" />
                    <br />

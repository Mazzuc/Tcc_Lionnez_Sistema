@{
    ViewBag.Title = "NotaFiscal";
}

<div class="Img_logo">
    <img class="img-logos" src="~/Imagens/Logo.png" />
</div>

<div class="Img_fundo">
    <img class="img-plantas" src="~/Imagens/Plantas.jpg" />
</div>

<div class="row">
    <div class="card green">
        @if (@ViewBag.Metodo == "pix")
        {
            <div>

                <center>
                    <label class="tit-zoo"><b>Zoológico Zoo</b></label><br>

                    <label class="rua-zoo">R.Guaipá, 678 - Vila Leoplodina, São Paulo - SP, 05089-000</label><br>

                    <label class="dd-num"><b style="color:black;">CNPJ:</b> 81.601.264/0001-00 <b style="color:black;">IE:</b> 291.498.630.974</label><br>

                    <label class="frm-pag"><b>Forma de pagamento:</b> @ViewBag.Metodo</label>
                    <hr />

                    <label class="extrato"><b>Extrato</b>ㅤㅤㅤOOOOO</label><br />
                    <label class="cpm-sat">CUPOM FISCAL ELETRÔNICO - SAT</label>
                    <hr />
                </center>
                <div class="vlr-mi">
                    <b style="color:black;">@ViewBag.QtdInteira Inteira </b>  @ViewBag.FormatInteira
                </div>
                <br />

                <div class="vlr-mi">
                    <b style="color:black;">@ViewBag.QtdMeia Meia </b>  @ViewBag.FormatMeia
                </div>
                <br />

                <div class="vlr-mi">
                    <b style="color:black;">Total: </b> @ViewBag.FormatTotal
                </div>
                <hr />
                <center>
                    <label class="n-ped">no. Ped. 123456789</label>

                    <div class="data">@ViewBag.Data</div>

                    <img class="img-codigo" src="~/Imagens/codigo-barras.png" />

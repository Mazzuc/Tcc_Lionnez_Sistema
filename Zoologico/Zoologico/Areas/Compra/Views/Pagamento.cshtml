
@{
    ViewBag.Title = "Pagamento";
}


<style type="text/css">
    body {
        font-family: "Poppins", sans-serif;
        background-color: #fafafa;
    }

    .row {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: -612px;
    }

    .card {
        border-radius: 5px;
        box-shadow: 7px 7px 13px 0px rgba(50, 50, 50, 0.22);
        padding: 30px;
        margin: 20px;
        width: 460px;
        transition: all 0.3s ease-out;
    }

        .card:hover {
            transform: translateY(-5px);
            cursor: pointer;
        }

        .card td {
            color: #a3a5ae;
            font-size: 17px;
        }

    .green {
        border-left: 3px solid #008a50;
    }

    .btn-outline-success {
        height: 45px;
        width: 200px;
        border-radius: 5px;
        margin-top: 25px;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 17px;
        font-weight: normal;
    }

    .cmc-bold-green {
        color: #008a50;
    }

    /*imagem-fundo-logo*/
    .img-plantas {
        width: 1365px;
        height: 680px;
        margin-top: -100px;
        margin-left: -128px;
    }

    .img-logos {
        width: 80px;
        height: 50px;
        position: absolute;
        margin-top: -70px;
        margin-left: -115px;
    }

    /*imagens pagamentos*/

    .img-pix {
        width: 20px;
        height: 20px;
    }

    .img-boleto {
        width: 22px;
        height: 20px;
    }

    .img-cartao {
        width: 22px;
        height: 20px;
    }

    .C-00 {
        width: 20px;
        height: 13px;
    }

    .C-03 {
        width: 35px;
        height: 13px;
    }



    /*titulos*/

    .nm-idicacao {
        color: #575658;
        font-size: 20px;
    }

    .nm-idicacao-mt {
        color: black;
        font-size: 20px;
    }


    /*label dados bdo cartao*/

    .nm-ddcartao {
        font-size: 14px;
        color: #a3a5ae;
    }


    /*button enviar*/
    .btn-outline-success {
        margin-top: -10px;
    }
</style>

